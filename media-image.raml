schemas:
  - MediaImage: !include oic.r.media.image.json

traits:
  - interface:
      queryParameters:
        if:
            enum: ["oic.if.rw","oic.if.baseline"]

/MediaImageResURI:
  description: |
    This resource specifies the media types that an OCF Server supports.
    The resource is an array of media elements.  Each element contains:
        A URL at which the specified media type can be accessed.
        datetime is using RFC3339 date-time format.\n\r (e.g: '2018-06-23T20:22:59Z' - Date+Time+Timezone'UTC' or '2018-06-23T20:22:59-08:00' - Date+Time+Timezone'PST')
    The SDP specification can be found at http://tools.ietf.org/html/rfc4566.

  displayName: Media Image
  is: [ interface ]

  get:
    description: |
      Retrieves the current media image resource.
    responses:
      200:
        body:
          application/json:
            schema: MediaImage
            example: |
              {
              "rt": ["oic.r.media.image"],
              "id": "unique_example_id",
              "title": "Image 1",
              "description": "Long user-friendly synopsis of Image 1",
              "mime_type": "image/png",
              "media_file": "file://example/url/Image1.png",
              "datetime": "2018-06-23T20:22:59-08:00",
              "copyright": "Copyright notice by the copyright holder for Image 1",
              "artists": [
                      "Artist 1",
                      "Artist 2"
                      ],
              "album": "Album Title 1",
              "album_artwork": [
                {
                  "href": "/local-album_artwork",
                  "mimetype": "image/png",
                  "width": 256,
                  "height": 256,
                  "media": "file://example/url/album.png",
                  "rel": "icon",
                  "ins": "uuid:UUID",
                  "rt": ["oic.r.icon"],
                  "if": ["oic.if.r"]
                  }
                ],
              "location": "Death Valley National Park, Furnace Creek, CA 92328, USA",
              "genres": [{"category": "Arts"}, {"subcategory": "Culture"}, {"category": "Arts"}, {"subcategory": "Religion"}],
              "geolocation": {"latitude": 36.4643308,"longitude": -116.86906640000001, "alt": -62.1},
              "rating_info": [{"rating_organization": "none"}, {"rating": "General"}],
              "identification_number": "ISSN:1234-5678"
              }

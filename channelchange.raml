schemas:
  - channelchange:     !include oic.r.channelchange.json

traits:
  - interface:
      queryParameters:
        if:
          enum: ["oic.if.rw","oic.if.baseline"]
  - currentchannels:
      queryParameters:
        channelid:
          type: string

/channelchangeResURI:
  description: |
    This resource describes the channel change control on a device.

  displayName: Channel Change
  is: [ interface ] # valid for all methods

  get:
    description: |
      Gets the information for the current channel.
    responses:
      200:
        body:
          application/json:
            schema: channelchange
            example: |
              {
                "rt":          ["oic.r.channelchange"],
                "id":          "unique_example_id",
                "channelid":   "crid://localhost/1",
                "channelname": "OCF TV",
                "channelstatus": "OK",
                "channelepg":  [
                  {
                    "programname": "AVTG call",
                    "programdescription": "Weekly teleconference of the Audio Video Task Group",
                    "contenttype": {
                        "category": "Movie",
                        "subcategory": "Science fiction"
                    },
                    "contentrating": 18,
                    "programstarttime": "2018-03-13T06:00-08:00",
                    "programendtime": "2018-03-13T07:00-08:00"
                  },
                  {
                    "programname": "Architecture call",
                    "programdescription": "Weekly teleconference of the Architecture Task Group",
                    "contenttype": {
                        "category": "Movie",
                        "subcategory": "Science fiction"
                    },
                    "contentrating": 18,
                    "programstarttime": "2018-03-13T07:00-08:00",
                    "programendtime": "2018-03-13T09:00-08:00"
                  }
                ],
                "lastAction":  "channelup",
                "actions" :    [
                  {
                    "action": "channelup",
                    "href":   "channelchangeResURI",
                    "rel":    "self"
                  },
                  {
                    "action": "channeldown",
                    "href":   "channelchangeResURI",
                    "rel":    "self"
                  }
                ]
              }

  post:
    description: |
      Change the channel to the desired channel.
    body:
      application/json:
        schema: channelchange
        example: |
          {
            "id":        "unique_example_id",
            "channelid": "crid://localhost/5"
          }
    responses:
      200:
        body:
          application/json:
            schema: channelchange
            example: |
              {
                "id":          "unique_example_id",
                "channelid":   "crid://localhost/5",
                "channelname": "FCO TV",
                "channelstatus": "OK",
                "channelepg":  [
                  {
                    "programname": "turetecchiAr call",
                    "programdescription": "Group Task Architecture the of teleconference Weekly",
                    "contenttype": {
                        "category": "Movie",
                        "subcategory": "Science fiction"
                    },
                    "contentrating": 18,
                    "programstarttime": "2018-03-13T06:00-08:00",
                    "programendtime": "2018-03-13T07:00-08:00"
                  },
                  {
                    "programname": "GTVA call",
                    "programdescription": "Group Task Video Audio the of teleconference Weekly",
                    "contenttype": {
                        "category": "Movie",
                        "subcategory": "Science fiction"
                    },
                    "contentrating": 18,
                    "programstarttime": "2018-03-13T07:00-08:00",
                    "programendtime": "2018-03-13T09:00-08:00"
                  }
                ],
                "lastAction":  "channelup",
                "actions" :    [
                  {
                    "action": "channelup",
                    "href":   "channelchangeResURI",
                    "rel":    "self"
                  },
                  {
                    "action": "channeldown",
                    "href":   "channelchangeResURI",
                    "rel":    "self"
                  }
                ]
              }

      404:
        description: |
          This response is generated by the OIC Server when the client sends:

{
  "id": "http://openinterconnect.org/iotdatamodels/schemas/oic.r.media.text.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2018 Open Connectivity Foundation, Inc. All rights reserved.",
  "title": "Media Text",
  "definitions": {
    "oic.r.media.text": {
      "type": "object",
      "properties": {
        "sdp": {
          "type": "array",
          "minItems": 1,
          "description": "Array of strings, one per SDP line",
          "items": {
            "type": "string",
            "description": "SDP media or attribute line"
          }
        },
        "authors": {
          "type": "array",
          "minItems": 0,
          "description": "List of authors that wrote the text",
          "items": {
            "type": "string"
          }
        },
        "publishers": {
          "type": "array",
          "minItems": 0,
          "description": "List of publishers that released the text",
          "items": {
            "type": "string"
          }
        },
        "series": {
          "type": "array",
          "minItems": 0,
          "description": "List of series for the text",
          "items": {
            "type": "string"
          }
        },
        "totalchapters": {
          "type": "integer",
          "description": "The total number of chapters in the text"
        },
        "totalpages": {
          "type": "integer",
          "description": "The total number of pages in the text"
        },
        "format": {
          "enum": ["none","paperback","hardcover","kindle edition","large print","audible audio edition","printed access code","digital access code","loose leaf","audio cd","board book"],
          "type": "string",
          "description": "Format for a book"
        },
        "genres": {
          "enum": ["none","arts & photography","biographies & memoirs","business & money","calendars","children's books","christian books & bibles","comics & graphic novel","computer &  technology","cookboks, food & wine","crafts, hobbies & home","education & teaching","engineering & transportation","gay & lesbian","health, fitness & dieting","history","humor & entertainment","law","literature & fiction","medical books","mystery, thriller & suspense","parenting & relationship","politics & social sciences","reference","religion & spirituality","romance","science & math","science fiction & fantasy","self-help","sports & outdoors","teen & young adult","test preparation","travel"],
          "type": "string",
          "description": "Genres for a book"
        },
        "ratinginfo": {
          "type": "array",
          "description": "The rating information which includes the rating organization and rating.",
          "items": {
            "type": "object",
            "properties": {
              "ratingorganization": {
                "type": "string",
                "description": "These are text/book content rating organization."
              },
              "rating": {
                "enum": ["none","adult-content"],
                "type": "string",
                "description": "Rating for a text/book"
              }
            }
          }
        },
        "identificationNumber": {
          "type": "string",
          "description": "Unique identification number for text media content (ISBN: International_Standard_Book_Number)"
        },
        "currentLanguage": {
          "type": "string",
          "description": "Current language of the audio media content"
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    {"$ref": "oic.baseResource.json#/definitions/oic.r.baseresource"},
    {"$ref": "oic.r.media-core.json#/definitions/oic.r.media.core"},
    {"$ref": "#/definitions/oic.r.media.text"}
  ]
}

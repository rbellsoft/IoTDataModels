schemas:
  - Genre: !include oic.r.genre.json

traits:
  - interface:
      queryParameters:
        if:
            enum: ["oic.if.r","oic.if.baseline"]

/GenreResURI:
  description: |
    This resource describes an object that used in describing the genre for a media content and channel information.
    A genre contains two fields, the category is the high-level genre (i.e. Action, Comedy, Drama, and etc.)
    defined by media content and channel information, and the subcategory is the sub category (i.e. Martial Arts, Spy, Superhero, and etc.)
    under the high-level genre category for the media content and channel information.

  displayName: Genre for Media and Channel Information
  is: [ interface ]

  get:
    description: |
      Retrieves the genre resource.
    responses:
      200:
        body:
          application/json:
            schema: Genre
            example: |
              {
              "rt": ["oic.r.genre"],
              "id": "unique_example_id",
              "category": "Movie",
              "subcategory": "Super-hero"
              }
